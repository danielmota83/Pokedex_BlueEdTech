    <main>
        <section id="cadastro">
            <h2>CADASTRE POKEMONS!</h2>
    
            <form id="form" action="/cadastro" method="post">
                <div>
                <label for="img">Link da Imagem</label>
                <input  type="url" name="img" id="img" placeholder="Link da imagem" required/>
            </div>
      
            <div>    
            <label for="nome">Nome</label>
                <input type="text" id="name" name="name" placeholder="Digite o nome do Pokemon" required/>
            </div>
                   
            <div> 
                <label for="tipo">Tipo</label>
                <input type="text" name="type" id="type" placeholder="Digite o tipo do pokemon" required/>
            </div>
      
                <div> 
                <label for="altura">Altura</label>
                <input type="text" name="height" id="height"placeholder="Digite o altura do pokemon" required/>
            </div>
      
                <div> 
                <label for="peso">Peso</label>
                <input type="text" name="weight" id="weight" placeholder="Digite o peso do pokemon" required/>
            </div>
                       
                <div> 
                <label for="Fraquesas">Fraquesas</label>
                <input type="text" name="weaknesses" id="weaknesses" placeholder="Digite as fraquesas" required/>
            </div>
                        
                <div> 
                <button type="submit">CADASTRAR</button>
            </div>
            </form>
        </section>
